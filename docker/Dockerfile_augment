FROM tiangolo/uvicorn-gunicorn-fastapi:python3.7
SHELL ["/bin/bash", "-c"]

ENV RASA_NLU_DOCKER="YES" \
    RASA_NLU_HOME=/app \
    RASA_NLU_PYTHON_PACKAGES=/usr/local/lib/python3.7/dist-packages

WORKDIR ${RASA_NLU_HOME}

RUN python3 -m pip install --upgrade pip
RUN python3 -m pip install sentence_transformers
RUN python3 -m pip install spacy
RUN python3 -m spacy download en_core_web_sm
RUN python3 -m nltk.downloader wordnet
RUN mkdir pretrained_model

ADD https://public.ukp.informatik.tu-darmstadt.de/reimers/sentence-transformers/v0.2/bert-large-nli-stsb-mean-tokens.zip ${RASA_NLU_HOME}/pretrained_model

RUN unzip ./pretrained_model/bert-large-nli-stsb-mean-tokens.zip -d ./pretrained_model/bert-large-nli-stsb-mean-tokens

COPY augmentation ${RASA_NLU_HOME}/augmentation

EXPOSE 8000

CMD ["uvicorn", "augmentation.server:app","--host","0.0.0.0"]
